@using Microsoft.AspNet.Identity

@*@if (Request.IsAuthenticated)*@
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello, " + @User.Identity.Name + "!", "Index", "UserProfile")
            </li>
            @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
            @*<li>@Html.ActionLink("Log off", "SignOut", "OurLogin")</li>*@
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("NewRegister", "NewRegister", "OurRegistration", routeValues: null, htmlAttributes: new { id = "newregisterLink" })</li>
        <li>@Html.ActionLink("Log in", "NewLogin", "OurLogin", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
